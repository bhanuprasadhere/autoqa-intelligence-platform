// AutoQA Intelligence Platform - Prisma Schema
// Based on docs/02_system/Database_Schema.md

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// User Profile (extends Supabase Auth)
model Profile {
  id        String   @id @default(uuid()) @db.Uuid
  fullName  String?  @map("full_name")
  role      String   @default("viewer") // 'admin' or 'viewer'
  avatarUrl String?  @map("avatar_url")
  createdAt DateTime @default(now()) @map("created_at")
  
  projects  Project[]

  @@map("profiles")
}

// Project - represents a target website to test
model Project {
  id        String   @id @default(uuid()) @db.Uuid
  userId    String   @map("user_id") @db.Uuid
  name      String
  baseUrl   String   @map("base_url")
  createdAt DateTime @default(now()) @map("created_at")

  user  Profile @relation(fields: [userId], references: [id], onDelete: Cascade)
  scans Scan[]

  @@map("projects")
}

// Scan - a test run against a project
model Scan {
  id                 String    @id @default(uuid()) @db.Uuid
  projectId          String    @map("project_id") @db.Uuid
  status             String    @default("queued") // queued, running, completed, failed
  startedAt          DateTime? @map("started_at")
  completedAt        DateTime? @map("completed_at")
  totalPagesScanned  Int       @default(0) @map("total_pages_scanned")
  totalBugsFound     Int       @default(0) @map("total_bugs_found")
  createdAt          DateTime  @default(now()) @map("created_at")

  project Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  logs    ScanLog[]
  siteMap SiteMap[]

  @@map("scans")
}

// Site Map - tracks discovered pages during crawl
model SiteMap {
  id        String   @id @default(uuid()) @db.Uuid
  scanId    String   @map("scan_id") @db.Uuid
  url       String
  parentUrl String?  @map("parent_url")
  depth     Int
  status    String   @default("pending") // pending, scanned, failed
  pageTitle String?  @map("page_title")
  createdAt DateTime @default(now()) @map("created_at")

  scan Scan @relation(fields: [scanId], references: [id], onDelete: Cascade)

  @@map("site_map")
}

enum ScanStatus {
  queued
  running
  completed
  failed
}

// Scan Log - individual log entries during a scan
model ScanLog {
  id            String   @id @default(uuid()) @db.Uuid
  scanId        String   @map("scan_id") @db.Uuid
  logLevel      LogLevel @map("log_level")
  message       String
  urlPath       String?  @map("url_path")
  screenshotUrl String?  @map("screenshot_url")
  aiAnalysis    Json?    @map("ai_analysis")
  createdAt     DateTime @default(now()) @map("created_at")

  scan Scan @relation(fields: [scanId], references: [id], onDelete: Cascade)

  @@map("scan_logs")
}

enum LogLevel {
  info
  warning
  error
  critical
}
